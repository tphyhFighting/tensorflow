#!/usr/bin/env python
# -*- coding -*-
def print_two(*args):
	args1,args2 = args
	print "args1:%r,args2:%r"%(args1,args2)
#ok,that *args is actually pointless,we can just do this
def print_two_again(args1,args2):
	print "args1:%r,args2:%r"%(args1,args2)
#this just take one argument
def print_one(args1):
	print "args1:%r"%(args1)
#this one takes no arguments
def print_none():
	print "I got nothin."
def print_love(*args):
	tp, hyh = args
	print "What is love?"
	print "%r loves %r,and %r also loves %r"%(hyh,tp,tp,hyh)
print_two("Zed","Shaw")
print_two_again("Zed","Shaw")
print_one("First!")
print_none()
print '*'*10
print_love("tp","hyh")
